              <input type="text" name="activity_item[starting_time]" class="board_time_start_input" placeholder="10:00"> to
              <input type="text" name="activity_item[ending_time]" class="board_time_end_input" placeholder="11:30">
            </div>
            <div class="board_note">
              <textarea name="activity_item[activity_note]" class="board_note_input" rows="3" placeholder="Note"></textarea>
            </div>
            <input id="activity_item_activity_starred" name="activity_item[activity_starred]" type="checkbox" value="1">
            <!-- <input id="activity_item_user_id" name="activity_item[user_id]" type="hidden" value="1"> -->
            <input name="commit" type="submit" value="Add">
