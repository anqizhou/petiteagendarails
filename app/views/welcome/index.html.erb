              <input type="text" name="activity_item[activity_item]" class="board_title_input" placeholder="Add activity..."><span class="glyphicon glyphicon-edit"></span>
            </div>
            <input id="activity_item_activity_color" name="activity_item[activity_color]" type="text">
            <div class="datetime_picker">
