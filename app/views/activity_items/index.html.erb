<h1>Listing activity_items</h1>

<table>
  <thead>
    <tr>
      <th>Activity item</th>
      <th>Activity date</th>
      <th>Starting time</th>
      <th>Ending time</th>
      <th>Activity note</th>
      <th>Activity starred</th>
      <th>User</th>
      <th>Activity color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_items.each do |activity_item| %>
      <tr>
        <td><%= activity_item.activity_item %></td>
        <td><%= activity_item.activity_date %></td>
        <td><%= activity_item.starting_time %></td>
        <td><%= activity_item.ending_time %></td>
        <td><%= activity_item.activity_note %></td>
        <td><%= activity_item.activity_starred %></td>
        <td><%= activity_item.user_id %></td>
        <td><%= activity_item.activity_color %></td>
        <td><%= link_to 'Show', activity_item %></td>
        <td><%= link_to 'Edit', edit_activity_item_path(activity_item) %></td>
        <td><%= link_to 'Destroy', activity_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

